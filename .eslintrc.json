{
  "extends": "eslint-config-airbnb",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "mountWithIntl": true,
    "mountWithStore": true
  },
  "plugins": [
    "jest"
  ],
  "parser": "babel-eslint",
  "rules": {
    "brace-style": [2, "1tbs", {
      "allowSingleLine": true
    }],
    "comma-dangle": ["error", "always-multiline"],
    "comma-spacing":["error", {
      "before": false,
      "after": true
    }],
    "curly": 2,
    "dot-notation": "off",
    "function-paren-newline": 0,
    "global-require": 0,
    "import/no-named-as-default": 0,
    "import/prefer-default-export": 0,
    "object-curly-spacing": ["error", "always"],
    "no-param-reassign": 0,
    "no-unused-vars": 2,
    "no-console": 0,
    "no-trailing-spaces": "error",
    "prefer-const": ["error"],
    "quote-props": ["error", "consistent"],
    "react/button-has-type": 0,
    "react/jsx-filename-extension": 0,
    "react/prop-types": 0,
    "react/jsx-uses-vars": 2,
    "react/destructuring-assignment": [0, "always", {
      "ignoreClassFields": true
    }],
    "react/jsx-wrap-multilines": ["error", {
      "default": "parens-new-line",
      "arrow": "parens"
    }],
    "space-before-blocks": "error",
    "spaced-comment": "off",
    "semi": ["error", "always"],
    "valid-jsdoc": ["error", {
      "prefer": {
        "arg": "param",
        "argument": "param",
        "class": "constructor",
        "return": "returns",
        "virtual": "abstract"
      },
      "preferType": {
        "Boolean": "boolean",
        "Number": "number",
        "object": "Object",
        "String": "string"
      }
    }]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "src/"
        ]
      }
    }
  }
}
